
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /posts/{path=**} {
      allow list: if true;
    }
    
    match /team/{memberId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

     match /team/{path=**} {
      allow list: if true;
    }

    match /contacts/{contactId} {
        allow create: if true; // Anyone can send a message
        allow read, list, delete: if request.auth != null; // Only authenticated admins can read/delete
    }
  }
}
