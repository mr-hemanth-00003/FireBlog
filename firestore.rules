rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read-only access to posts and team members
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /team/{memberId} {
       allow read: if true;
       allow write: if request.auth != null;
    }

    // Allow only authenticated users to write to contacts
    match /contacts/{contactId} {
      allow read: if request.auth != null;
      allow write: if true;
    }
    
    // Allow anyone to write to the visitors collection for analytics
    match /visitors/{visitorId} {
        allow read: if request.auth != null;
        allow write: if true;
    }

    // Allow authenticated users to manage site settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
